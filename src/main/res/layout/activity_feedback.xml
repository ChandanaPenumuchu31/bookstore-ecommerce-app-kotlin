<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e2d085"
    tools:context=".Success">
    <ImageView
        android:id="@+id/ivlogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/auroraa"
        android:layout_centerHorizontal="true"

        />

    <TextView
        android:id="@+id/tvsuccess"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@id/ivlogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="FEEDBACK"
        android:textColor="#228B22"
        android:textSize="40sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etfeedback"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/tvsuccess"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/feedback_round"
        android:hint="enter your feedback here"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btsubmit"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@id/etfeedback"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_btn"
        android:text="SUBMIT"
        android:onClick="submit"
        android:textStyle="bold"
        app:backgroundTint="@null"

        tools:ignore="OnClick" />

    <Button
        android:id="@+id/btstore"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@id/btsubmit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_btn"
        android:onClick="openstore"
        android:text="OPEN STORE"
        android:textStyle="bold"
        app:backgroundTint="@null"

        tools:ignore="OnClick" />

</RelativeLayout>