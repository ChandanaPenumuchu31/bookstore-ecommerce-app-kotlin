<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#e2d085"
    app:cardCornerRadius="15dp"
    app:cardElevation="3dp"
    app:contentPadding="3dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativelayout"
        android:padding="5dp"
  >
        <ImageView
            android:id="@+id/ivBookstore"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/placeholder2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvBookname"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/ivBookstore"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:scrollHorizontally="false"
            android:inputType="textMultiLine"
            android:singleLine="false"/>
        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:id="@+id/item_count"
            android:drawableLeft="@drawable/ic_baseline_collections_bookmark_24"
            app:layout_constraintLeft_toRightOf="@id/ivBookstore"
            app:layout_constraintTop_toBottomOf="@+id/tvBookname"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:id="@+id/item_tcost"
            android:drawableLeft="@drawable/ic_baseline_currency_rupee_24"
            app:layout_constraintLeft_toRightOf="@id/ivBookstore"
            app:layout_constraintTop_toBottomOf="@+id/item_count"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>